<%= form_with(model:task, local: true) do |f| %>
    <% if task.errors.any? %>
    <div id="error_explation">
        <ul>
            <% task.errors.full_messages.each do |tsk| %>
            <li><%= tsk %></li>
            <% end %>
        </ul>
    </div>
    <% end %>
    
      <%= f.label :status, 'ステータス' %>
      <%= f.text_field :status %>
      
      <%= f.label :content, 'タスク' %>
      <%= f.text_field :content %>
      
      <%= f.submit '作成' %>
<% end %>

<%# ステータス欄に入れても、空欄エラーになった要因→text.fieldのとこにtext形式を入れていたから。 %>
